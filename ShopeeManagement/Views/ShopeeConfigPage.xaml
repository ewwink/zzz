												</ToggleSwitch.Resources>
											</ToggleSwitch>
										</StackPanel>
									</StackPanel>
								</Border>
								<Grid Background="White"
						  Height="25"
						  Width="Auto"
						  VerticalAlignment="Top"
						  HorizontalAlignment="Left"
						  Margin="15 5 0 0"
							  Padding="5 0 5 0">
