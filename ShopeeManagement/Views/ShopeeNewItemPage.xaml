<Page
    x:Class="ShopeeManagement.Views.ShopeeNewItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShopeeManagement.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
	xmlns:i="using:Microsoft.Xaml.Interactivity"
	xmlns:core="using:Microsoft.Xaml.Interactions.Core"
	xmlns:res="using:ShopeeManagement.Services"
	xmlns:converter="using:ShopeeManagement.Converters"
	xmlns:media="using:Microsoft.Xaml.Interactions.Media"
	xmlns:imgprocessing="using:Microsoft.Toolkit.Uwp.UI.Media"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	x:Name="root">
	<Page.Resources>
		<converter:StringToUriConverter x:Key="StringToUri"/>
		<converter:StringToStatusColorConverter x:Key="StringToColor"/>
		<converter:StringToToolTipStringConverter x:Key="StringToTooltip"/>
		<converter:OpacityToBooleanConverter x:Key="OpacityToBoolean"/>
		<converter:CheckedToSolidColorConverter x:Key="CheckedToColor"/>
		<res:StaticResources x:Key="Resources"/>
		<Storyboard x:Name="GrImgProcessingShown">
			<DoubleAnimation Duration="0:0:0.5"
							 To="1"
							 Storyboard.TargetProperty="Opacity"
							 Storyboard.TargetName="GrImgProcessing"/>
		</Storyboard>
		<Storyboard x:Name="GrImgProcessingHidden">
			<DoubleAnimation Duration="0:0:0.5"
							 To="0"
							 Storyboard.TargetProperty="Opacity"
							 Storyboard.TargetName="GrImgProcessing"/>
		</Storyboard>
	</Page.Resources>
	<Grid>
		<Grid>
			<Pivot>
				<PivotItem Header="New Item"
					   Margin="10 10 12 0">
					<Grid>
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="*"/>
								<RowDefinition Height="50"/>
							</Grid.RowDefinitions>
							<Grid Grid.Row="0">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								<Grid Grid.Column="0"
						  Padding="0 0 10 10"
						  BorderBrush="#ccc"
						  BorderThickness="0 0 1 0">
									<Grid.RowDefinitions>
										<RowDefinition Height="70"/>
										<RowDefinition Height="*"/>
										<RowDefinition Height="100"/>
										<RowDefinition Height="200"/>
									</Grid.RowDefinitions>
									<Grid Grid.Row="0">
										<Grid.RowDefinitions>
											<RowDefinition/>
											<RowDefinition/>
										</Grid.RowDefinitions>
										<TextBlock Text="Name"
									   FontSize="18"
									   VerticalAlignment="Center"/>
										<Border BorderBrush="#555"
									BorderThickness="1"
									CornerRadius="5"
									Grid.Row="1">
											<TextBox BorderBrush="Transparent"
											 BorderThickness="0"
											 PlaceholderText="Enter your item name"
											 Padding="6"
											 Text="{Binding TbItemName, Mode=TwoWay}"/>
										</Border>
									</Grid>
									<Grid Grid.Row="1">
										<Grid.RowDefinitions>
											<RowDefinition Height="40"/>
											<RowDefinition Height="*"/>
										</Grid.RowDefinitions>
										<TextBlock Text="Description"
									   FontSize="18"
									   VerticalAlignment="Center"/>
										<Border BorderBrush="#555"
									BorderThickness="1"
									CornerRadius="5"
									Grid.Row="1">
											<TextBox BorderBrush="Transparent"
										 BorderThickness="0"
										 PlaceholderText="Enter your item description"
										 TextWrapping="Wrap"
										 Padding="6"
											 Text="{Binding TbItemDescription, Mode=TwoWay}"/>
										</Border>
									</Grid>
									<Grid Grid.Row="2">
										<Grid.RowDefinitions>
											<RowDefinition Height="30"/>
											<RowDefinition Height="*"/>
										</Grid.RowDefinitions>
										<TextBlock Text="Category"
									   FontSize="18"
									   VerticalAlignment="Center"/>
										<Grid Grid.Row="1">
											<Grid.ColumnDefinitions>
												<ColumnDefinition Width="*"/>
												<ColumnDefinition Width="*"/>
												<ColumnDefinition Width="*"/>
											</Grid.ColumnDefinitions>
											<Grid Grid.Column="0">
												<Grid.RowDefinitions>
													<RowDefinition Height="30"/>
													<RowDefinition Height="*"/>
												</Grid.RowDefinitions>
												<TextBlock Text="Main category"
										   FontSize="16"
										   VerticalAlignment="Center"/>
												<Border BorderBrush="#555"
											BorderThickness="1"
											CornerRadius="5"
											Margin="0 5 5 0"
											Visibility="{Binding isMainCategoriesShown}"
											HorizontalAlignment="Stretch"
											Grid.Row="1">

													<ComboBox HorizontalAlignment="Stretch"
												  BorderBrush="Transparent"
												  BorderThickness="0"
												  x:Name="CbxMainCategories"
												  ItemsSource="{Binding ListCategories}"
												  SelectedItem="{Binding SelectedMainCategory, Mode=TwoWay}"
												  PlaceholderText="{Binding TbxChooseMainCategory}"
												  PlaceholderForeground="#ccc"
												  Visibility="{Binding isMainCategoriesShown}"
												  IsTextSearchEnabled="True">
														<ComboBox.ItemTemplate>
															<DataTemplate>
																<Grid>
																	<Grid.ColumnDefinitions>
																		<ColumnDefinition Width="30"/>
																		<ColumnDefinition/>
																	</Grid.ColumnDefinitions>
																	<Grid Grid.Column="0">
																		<Image Source="{Binding main.image,Converter={StaticResource StringToUri}}"
														   Stretch="UniformToFill"
														   Width="25"
														   Height="25"
														   HorizontalAlignment="Center"/>
																	</Grid>
																	<Grid Grid.Column="1">
																		<TextBlock Text="{Binding main.display_name}"
															   FontSize="15"
															   VerticalAlignment="Center"
															   Margin="10 0 0 0"
															   TextWrapping="NoWrap"
															   TextTrimming="CharacterEllipsis"/>
																	</Grid>
																</Grid>
															</DataTemplate>
														</ComboBox.ItemTemplate>
													</ComboBox>
												</Border>
											</Grid>
											<Grid Grid.Column="1">
												<Grid.RowDefinitions>
													<RowDefinition Height="30"/>
													<RowDefinition Height="*"/>
												</Grid.RowDefinitions>
												<TextBlock Text="Sub category"
										   FontSize="16"
										   VerticalAlignment="Center"/>
												<Border BorderBrush="#555"
											BorderThickness="1"
											CornerRadius="5"
											Margin="0 5 0 0"
											Visibility="{Binding isSubCategoriesShown}"
											HorizontalAlignment="Stretch"
											Grid.Row="1">

													<ComboBox HorizontalAlignment="Stretch"
										  BorderBrush="Transparent"
										  BorderThickness="0"
										  x:Name="CbxSubCategories"
										  ItemsSource="{Binding ListSubCategories}"
										  SelectedItem="{Binding SelectedSubCategory, Mode=TwoWay}"
										  PlaceholderText="{Binding TbxChooseSubCategory}"
										  PlaceholderForeground="#ccc"
										  Visibility="{Binding isSubCategoriesShown}">
														<ComboBox.ItemTemplate>
															<DataTemplate>
																<Grid>
																	<Grid.ColumnDefinitions>
																		<ColumnDefinition Width="30"/>
																		<ColumnDefinition/>
																	</Grid.ColumnDefinitions>
																	<Grid Grid.Column="0">
																		<Image Source="{Binding image,Converter={StaticResource StringToUri}}"
														   Stretch="UniformToFill"
														   Width="25"
														   Height="25"
														   HorizontalAlignment="Center"/>
																	</Grid>
																	<Grid Grid.Column="1">
																		<TextBlock Text="{Binding display_name}"
															   FontSize="15"
															   VerticalAlignment="Center"
															   Margin="10 0 0 0"
															   TextWrapping="NoWrap"
															   TextTrimming="CharacterEllipsis"/>
																	</Grid>
																</Grid>
															</DataTemplate>
														</ComboBox.ItemTemplate>
													</ComboBox>
												</Border>
											</Grid>
											<Grid Grid.Column="2"
									  Margin="5 0 0 0">
												<Grid.RowDefinitions>
													<RowDefinition Height="30"/>
													<RowDefinition Height="*"/>
												</Grid.RowDefinitions>
												<TextBlock Text="Sub-sub category"
										   FontSize="16"
										   VerticalAlignment="Center"/>
												<Border BorderBrush="#555"
											BorderThickness="1"
											CornerRadius="5"
											Margin="0 5 0 0"
											Visibility="{Binding isSubSubCategoriesShown}"
											HorizontalAlignment="Stretch"
											Grid.Row="1">

													<ComboBox HorizontalAlignment="Stretch"
										  BorderBrush="Transparent"
										  BorderThickness="0"
										  x:Name="CbxSubSubCategories"
										  ItemsSource="{Binding ListSubSubCategories}"
										  SelectedItem="{Binding SelectedSubSubCategory, Mode=TwoWay}"
										  PlaceholderText="{Binding TbxChooseSubSubCategory}"
										  PlaceholderForeground="#ccc"
										  Visibility="{Binding isSubSubCategoriesShown}">
														<ComboBox.ItemTemplate>
															<DataTemplate>
																<Grid>
																	<Grid.ColumnDefinitions>
																		<ColumnDefinition Width="30"/>
																		<ColumnDefinition/>
																	</Grid.ColumnDefinitions>
																	<Grid Grid.Column="0">
																		<Image Source="{Binding image,Converter={StaticResource StringToUri}}"
														   Stretch="UniformToFill"
														   Width="25"
														   Height="25"
														   HorizontalAlignment="Center"/>
																	</Grid>
																	<Grid Grid.Column="1">
																		<TextBlock Text="{Binding display_name}"
															   FontSize="15"
															   VerticalAlignment="Center"
															   Margin="10 0 0 0"
															   TextWrapping="NoWrap"
															   TextTrimming="CharacterEllipsis"/>
																	</Grid>
																</Grid>
															</DataTemplate>
														</ComboBox.ItemTemplate>
													</ComboBox>
												</Border>
											</Grid>
										</Grid>
									</Grid>
									<Grid Grid.Row="3">
										<Grid.RowDefinitions>
											<RowDefinition Height="40"/>
											<RowDefinition Height="*"/>
										</Grid.RowDefinitions>
										<TextBlock Text="Attributes"
									   FontSize="18"
									   VerticalAlignment="Center"/>
										<Grid Grid.Row="1">
											<ListView ItemsSource="{Binding ListFullAttribute}">
												<ListView.ItemContainerStyle>
													<Style TargetType="ListViewItem">
														<Setter Property="Padding" Value="0"/>
														<Setter Property="HorizontalAlignment" Value="Stretch"/>
														<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
														<Setter Property="Template">
															<Setter.Value>
																<ControlTemplate TargetType="ListViewItem">
																	<ListViewItemPresenter FocusSecondaryBorderBrush="Transparent"
															   PlaceholderBackground="Transparent"
															   PointerOverBackground="Transparent"
															   SelectedBackground="Transparent"
															   SelectedPointerOverBackground="Transparent"
															   PointerOverForeground="Red"
															   SelectedForeground="Red"/>
																</ControlTemplate>
															</Setter.Value>
														</Setter>
													</Style>
												</ListView.ItemContainerStyle>
												<ListView.ItemTemplate>
													<DataTemplate>
														<Grid>
															<Grid.RowDefinitions>
																<RowDefinition Height="25"/>
																<RowDefinition Height="40"/>
															</Grid.RowDefinitions>
															<Grid Grid.Row="0">
																<StackPanel Orientation="Horizontal"
																VerticalAlignment="Center">
																	<TextBlock Text="{Binding data.multi_lang[0].display_name}"
																   FontSize="15"/>
																	<TextBlock Text="{Binding data.multi_lang[0].tooltip, Converter={StaticResource StringToTooltip}}"
																   Margin="10 0 0 0"
																   Foreground="#555"
																   FontSize="13"/>
																</StackPanel>
															</Grid>
															<Grid Grid.Row="1">
																<Grid.ColumnDefinitions>
																	<ColumnDefinition Width="*"/>
																	<ColumnDefinition Width="*"/>
																	<ColumnDefinition Width="*"/>
																</Grid.ColumnDefinitions>
																<Grid Grid.Column="0">
																	<Border BorderBrush="#555"
																BorderThickness="1"
																CornerRadius="5"
																VerticalAlignment="Center"
																HorizontalAlignment="Stretch"
																Height="35"
																Margin="0 0 5 0"
																Grid.Row="1">
																		<ComboBox BorderBrush="Transparent"
																  HorizontalAlignment="Stretch"
																  VerticalAlignment="Stretch"
																  BorderThickness="0"
																  x:Name="CbxSubSubCategories"
																  ItemsSource="{Binding data.multi_lang[0].value}"
																  SelectedItem="{Binding data.multi_lang[0].Choose, Mode=TwoWay}"
																  PlaceholderText="{Binding data.multi_lang[0].placeholder}"
																  PlaceholderForeground="#888">
																			<i:Interaction.Behaviors>
																				<core:EventTriggerBehavior EventName="SelectionChanged">
																					<core:InvokeCommandAction Command="{Binding ElementName=root, Path=DataContext.CbxAttributeSelectionChanged}"
																											  CommandParameter="{Binding}"/>
																				</core:EventTriggerBehavior>
																			</i:Interaction.Behaviors>
																		</ComboBox>

																	</Border>
																</Grid>
															</Grid>
														</Grid>
													</DataTemplate>
												</ListView.ItemTemplate>
												<!--<ListViewItem>
										<Grid>
											<Grid.RowDefinitions>
												<RowDefinition Height="25"/>
												<RowDefinition Height="45"/>
											</Grid.RowDefinitions>
											<Grid Grid.Row="0">
												<StackPanel Orientation="Horizontal"
																VerticalAlignment="Center">
													<TextBlock Text="Hehe"
															   FontSize="14"/>
													<TextBlock Text="123"
															   Margin="10 0 0 0"
															   Foreground="#555"
															   FontSize="12"
															   VerticalAlignment="Center"/>
												</StackPanel>
											</Grid>
											<Grid Grid.Row="1">
												<Border BorderBrush="#555"
															BorderThickness="1"
															CornerRadius="5"
															VerticalAlignment="Center"
															HorizontalAlignment="Left"
															Width="300"
															Height="40"
															Grid.Row="1">
													<ComboBox BorderBrush="Transparent"
															  HorizontalAlignment="Stretch"
																  BorderThickness="0"
																  ItemsSource="{Binding data.multi_lang[0].value}"
																  SelectedItem="{Binding SelectedSubSubCategory, Mode=TwoWay}"
																  PlaceholderText="{Binding data.multi_lang[0].placeholder}"
																  PlaceholderForeground="#888"/>
												</Border>
											</Grid>
										</Grid>
									</ListViewItem>-->
											</ListView>
										</Grid>
									</Grid>
								</Grid>
								<ScrollViewer Grid.Column="1"
										  Padding="10 0 0 10">
									<Grid>
										<Grid.RowDefinitions>
											<RowDefinition Height="Auto"/>
											<RowDefinition Height="Auto"/>
											<RowDefinition />
										</Grid.RowDefinitions>
										<Grid Grid.Row="0">
											<Grid.RowDefinitions>
												<RowDefinition Height="35"/>
												<RowDefinition/>
											</Grid.RowDefinitions>
											<Grid Grid.Row="0">
												<TextBlock Text="Media" 
													   FontSize="18"
													   VerticalAlignment="Center"
													   HorizontalAlignment="Left"/>
												<Border CornerRadius="5"
													Width="160"
													VerticalAlignment="Center"
													HorizontalAlignment="Right">
													<Button VerticalAlignment="Bottom"
														HorizontalAlignment="Stretch"
														Background="#E74B2C"
														Foreground="White"
														BorderBrush="Transparent"
														BorderThickness="0"
														IsEnabled="{Binding isBtCheckShippingFeeEnable}">
														<StackPanel Orientation="Horizontal">
															<TextBlock Text="&#xE71E;"
																   FontFamily="Segoe MDL2 Assets"
																   FontSize="16"
																   VerticalAlignment="Bottom"/>
															<TextBlock Text="image processing"
																   FontSize="16"
																   Margin="5 0 0 0"/>
														</StackPanel>
														<i:Interaction.Behaviors>
															<core:EventTriggerBehavior EventName="Tapped">
																<core:InvokeCommandAction Command="{Binding BtImageProcessingTapped}"/>
															</core:EventTriggerBehavior>
														</i:Interaction.Behaviors>
													</Button>
												</Border>
											</Grid>
											<Grid Grid.Row="1">
												<GridView SelectionMode="None"
													  ItemsSource="{Binding ListImages}">
													<GridView.ItemTemplate>
														<DataTemplate>
															<Grid>
																<Image Stretch="Fill"
													   Width="100"
													   Height="100"
													   Source="{Binding Source}"
													   Opacity="0.5"/>
																<Button Padding="0"
														Background="Transparent"
														HorizontalAlignment="Stretch"
														x:Name="BtStartPage"
														Visibility="{Binding isAddImageShown}">
																	<TextBlock FontFamily="Segoe MDL2 Assets"
																   Text="&#xECC8;"
																   TextAlignment="Center"
																   FontSize="25"
																   VerticalAlignment="Center"
															   Foreground="Red">
																	</TextBlock>
																	<Button.Resources>
																		<ResourceDictionary>
																			<ResourceDictionary.ThemeDictionaries>
																				<ResourceDictionary x:Key="Light">
																					<SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent" />
																					<SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="Transparent"/>
																					<SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
																					<SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
																					<SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
																					<SolidColorBrush x:Key="ButtonForegroundPressed" Color="Red"/>
																					<SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent"/>
																					<SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="Transparent"/>
																				</ResourceDictionary>
																			</ResourceDictionary.ThemeDictionaries>
																		</ResourceDictionary>
																	</Button.Resources>
																	<i:Interaction.Behaviors>
																		<core:EventTriggerBehavior EventName="Tapped">
																			<core:InvokeCommandAction Command="{Binding ElementName=root, Path=DataContext.BtAddNewImageTapped}"
																								  CommandParameter="{Binding}"/>
																		</core:EventTriggerBehavior>
																	</i:Interaction.Behaviors>
																</Button>
																<Button Padding="0"
															Background="Transparent"
															HorizontalAlignment="Stretch"
															Visibility="{Binding isCanDeleteShown}">
																	<TextBlock FontFamily="Segoe MDL2 Assets"
																   Text="&#xEA39;"
																   TextAlignment="Center"
																   FontSize="25"
																   VerticalAlignment="Center">
																	</TextBlock>
																	<Button.Resources>
																		<ResourceDictionary>
																			<ResourceDictionary.ThemeDictionaries>
																				<ResourceDictionary x:Key="Light">
																					<SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent" />
																					<SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="Transparent"/>
																					<SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
																					<SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
																					<SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
																					<SolidColorBrush x:Key="ButtonForegroundPressed" Color="Red"/>
																					<SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent"/>
																					<SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="Transparent"/>
																				</ResourceDictionary>
																			</ResourceDictionary.ThemeDictionaries>
																		</ResourceDictionary>
																	</Button.Resources>
																	<i:Interaction.Behaviors>
																		<core:EventTriggerBehavior EventName="Tapped">
																			<core:InvokeCommandAction Command="{Binding ElementName=root, Path=DataContext.BtDeleteImageTapped}"
															  CommandParameter="{Binding}"/>
																		</core:EventTriggerBehavior>
																	</i:Interaction.Behaviors>
																</Button>
															</Grid>
														</DataTemplate>
													</GridView.ItemTemplate>
													<GridView.ItemContainerStyle>
														<Style TargetType="GridViewItem">
															<Setter Property="Height" Value="100"/>
															<Setter Property="Width" Value="100"/>
															<Setter Property="Padding" Value="0"/>
															<Setter Property="BorderBrush" Value="#666"/>
															<Setter Property="BorderThickness" Value="1"/>
															<Setter Property="Margin" Value="0 0 5 5"/>
														</Style>
													</GridView.ItemContainerStyle>
												</GridView>
											</Grid>
										</Grid>
										<Grid Grid.Row="1">
											<Grid.RowDefinitions>
												<RowDefinition Height="35"/>
												<RowDefinition Height="Auto"/>
											</Grid.RowDefinitions>
											<Grid Grid.Row="0">
												<TextBlock Text="Pricing"
												   FontSize="18"
												   VerticalAlignment="Center"/>
												<StackPanel Orientation="Horizontal"
													HorizontalAlignment="Right">
													<TextBlock Text="Have product's variants"
													   HorizontalAlignment="Right"
													   VerticalAlignment="Center"/>
													<ToggleSwitch Width="80"
														  HorizontalAlignment="Right"
														  VerticalAlignment="Center"
														  Margin="10 0 0 0"
														  x:Name="TgMultiVariations"
														  IsOn="{Binding isMultiVariations, Mode=TwoWay}">
														<ToggleSwitch.Resources>
															<ResourceDictionary>
																<ResourceDictionary.ThemeDictionaries>
																	<ResourceDictionary x:Key="Light">
																		<SolidColorBrush x:Key="ToggleSwitchFillOn" Color="#E74B2C"/>
																		<SolidColorBrush x:Key="ToggleSwitchFillOnPointerOver" Color="#E74B2C"/>
																		<SolidColorBrush x:Key="ToggleSwitchFillOnPressed" Color="#E74B2C"/>
																	</ResourceDictionary>
																</ResourceDictionary.ThemeDictionaries>
															</ResourceDictionary>
														</ToggleSwitch.Resources>
													</ToggleSwitch>
												</StackPanel>
											</Grid>
											<Grid Grid.Row="1">
												<StackPanel>
													<Grid>
														<Grid.ColumnDefinitions>
															<ColumnDefinition Width="*"/>
															<ColumnDefinition Width="*"/>
															<ColumnDefinition Width="Auto"/>
														</Grid.ColumnDefinitions>
														<Grid Grid.Column="0"
													  Margin="0 0 5 0">
															<StackPanel>
																<StackPanel Orientation="Horizontal">
																	<TextBlock Text="Product price"/>
																	<TextBlock Text="*Numberic required"
																	   FontSize="10"
																	   FontWeight="SemiBold"
																	   VerticalAlignment="Top"
																	   Foreground="Red"
																	   Margin="3 0 0 0"
																	   Visibility="{Binding isWarningTbxPriceShown}"/>
																</StackPanel>
																<Border BorderBrush="#555"
																BorderThickness="1"
																CornerRadius="5"
																Grid.Row="1"
																Margin="0 3 0 0">
																	<TextBox BorderBrush="Transparent"
																	 BorderThickness="0"
																	 PlaceholderText="Enter the price"
																	 Padding="6"
																	 Text="{Binding TbItemPrice, Mode=TwoWay}"/>
																</Border>
															</StackPanel>
														</Grid>
														<Grid Grid.Column="1"
													  Margin="5 0 5 0">
															<StackPanel>
																<StackPanel Orientation="Horizontal">
																	<TextBlock Text="Product stock"/>
																	<TextBlock Text="*Numberic required"
																	   FontSize="10"
																	   FontWeight="SemiBold"
																	   VerticalAlignment="Top"
																	   Foreground="Red"
																	   Margin="3 0 0 0"
																	   Visibility="{Binding isWarningTbxStockShown}"/>
																</StackPanel>
																<Border BorderBrush="#555"
																BorderThickness="1"
																CornerRadius="5"
																Grid.Row="1"
																Margin="0 3 0 0">
																	<TextBox BorderBrush="Transparent"
																	 BorderThickness="0"
																	 PlaceholderText="Enter the number of products"
																	 Padding="6"
																	 Text="{Binding TbItemStock, Mode=TwoWay}"/>
																</Border>
															</StackPanel>
														</Grid>
														<Grid Grid.Column="2"
													  Visibility="{Binding ElementName=TgMultiVariations, Path=IsOn}">
															<Border CornerRadius="5"
															Width="200"
															Height="34"
															VerticalAlignment="Bottom">
																<Button VerticalAlignment="Stretch"
																HorizontalAlignment="Stretch"
																Background="#E74B2C"
																Foreground="White"
																BorderBrush="Transparent"
																BorderThickness="0">
																	<StackPanel Orientation="Horizontal">
