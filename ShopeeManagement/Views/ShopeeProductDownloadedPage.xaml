												<SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent" />
												<SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="Transparent"/>
												<SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
												<SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
												<SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
												<SolidColorBrush x:Key="ButtonForegroundPressed" Color="Red"/>
												<SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent"/>
												<SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="Transparent"/>
											</ResourceDictionary>
										</ResourceDictionary.ThemeDictionaries>
									</ResourceDictionary>
								</Button.Resources>
								<i:Interaction.Behaviors>
									<core:EventTriggerBehavior EventName="Tapped">
										<core:InvokeCommandAction Command="{Binding ElementName=root, Path=DataContext.BtApplyTextPreProcessTapped}"
														  CommandParameter="{Binding}"/>
									</core:EventTriggerBehavior>
								</i:Interaction.Behaviors>
							</Button>
						</Grid>
						<Grid Grid.Column="0">
							<Button Padding="0"
									Width="80"
									Background="Transparent"
									HorizontalAlignment="Center"
									VerticalAlignment="Bottom">
								<StackPanel>
									<TextBlock FontFamily="Segoe MDL2 Assets"
										   Text="&#xE7A7;"
										   TextAlignment="Center"
										   FontSize="20"/>
									<TextBlock Text="{Binding TbxUndoAll}"
										   FontSize="14"
										   VerticalAlignment="Bottom"/>
								</StackPanel>
								<Button.Resources>
									<ResourceDictionary>
										<ResourceDictionary.ThemeDictionaries>
											<ResourceDictionary x:Key="Light">
												<SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent" />
												<SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="Transparent"/>
												<SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
												<SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
												<SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
												<SolidColorBrush x:Key="ButtonForegroundPressed" Color="Red"/>
												<SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent"/>
												<SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="Transparent"/>
											</ResourceDictionary>
										</ResourceDictionary.ThemeDictionaries>
									</ResourceDictionary>
								</Button.Resources>
								<i:Interaction.Behaviors>
									<core:EventTriggerBehavior EventName="Tapped">
										<core:InvokeCommandAction Command="{Binding BtUndoAllItemTapped}"
														  CommandParameter="{Binding}"/>
									</core:EventTriggerBehavior>
								</i:Interaction.Behaviors>
							</Button>
						</Grid>
					</Grid>
				</Grid>
			</Grid>
		</Grid>
		<Grid Background="#eee"
			  Opacity="0"
			  x:Name="GrUploadingProduct"
			  Tag="{Binding GrUploadingProductTag}"
			  Visibility="{Binding ElementName=GrUploadingProduct, Path=Opacity, Converter={StaticResource OpacityToBoolean}}">
			<i:Interaction.Behaviors>
				<core:DataTriggerBehavior Binding="{Binding Tag, ElementName=GrUploadingProduct}" Value="Visible">
					<media:ControlStoryboardAction Storyboard="{StaticResource SbUploadingProductShown}" ControlStoryboardOption="Play"/>
				</core:DataTriggerBehavior>
				<core:DataTriggerBehavior Binding="{Binding Tag, ElementName=GrUploadingProduct}" Value="Collapsed">
					<media:ControlStoryboardAction Storyboard="{StaticResource SbUploadingProductHidden}" ControlStoryboardOption="Play"/>
				</core:DataTriggerBehavior>
			</i:Interaction.Behaviors>
			<ProgressRing IsActive="True"
						  Width="40"
						  Height="40"
						  IsTabStop="True"/>
