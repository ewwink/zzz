			</StackPanel>
		</Grid>

		<Grid Background="#eee"
			  Opacity="0"
			  x:Name="GrApplyProduct"
			  Tag="{Binding GrApplyProductTag}"
			  Visibility="{Binding ElementName=GrApplyProduct, Path=Opacity, Converter={StaticResource OpacityToBoolean}}">
			<i:Interaction.Behaviors>
				<core:DataTriggerBehavior Binding="{Binding Tag, ElementName=GrApplyProduct}" Value="Visible">
					<media:ControlStoryboardAction Storyboard="{StaticResource SbApplyProductShown}" ControlStoryboardOption="Play"/>
				</core:DataTriggerBehavior>
				<core:DataTriggerBehavior Binding="{Binding Tag, ElementName=GrApplyProduct}" Value="Collapsed">
					<media:ControlStoryboardAction Storyboard="{StaticResource SbApplyProductHidden}" ControlStoryboardOption="Play"/>
