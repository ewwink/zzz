					<Grid Grid.Row="1"
					  Margin="10 0 10 0"
					  BorderBrush="#ccc"
					  BorderThickness="0 1 0 0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition/>
						</Grid.ColumnDefinitions>
