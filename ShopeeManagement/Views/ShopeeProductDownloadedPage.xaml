											VerticalAlignment="Bottom"
											Background="Transparent"
											HorizontalAlignment="Center">
								<StackPanel>
									<TextBlock FontFamily="Segoe MDL2 Assets"
													   Text="&#xE73E;"
													   TextAlignment="Center"
													   FontSize="20"/>
									<TextBlock Text="{Binding TbxApplyAll}"
													   FontSize="14"
													   VerticalAlignment="Bottom"/>
