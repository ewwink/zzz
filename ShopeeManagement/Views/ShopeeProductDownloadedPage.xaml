<Page
    x:Class="ShopeeManagement.Views.ShopeeProductDownloadedPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShopeeManagement.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
	xmlns:i="using:Microsoft.Xaml.Interactivity"
	xmlns:core="using:Microsoft.Xaml.Interactions.Core"
	xmlns:res="using:ShopeeManagement.Services"
	xmlns:converter="using:ShopeeManagement.Converters"
	xmlns:media="using:Microsoft.Xaml.Interactions.Media"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	x:Name="root">
	<i:Interaction.Behaviors>
		<core:EventTriggerBehavior EventName="Loading">
			<core:InvokeCommandAction Command="{Binding ShopeeProductDownloadedPageLoading}"
														  CommandParameter="{Binding}"/>
		</core:EventTriggerBehavior>
	</i:Interaction.Behaviors>
	<Page.Resources>
		<converter:StringToUriConverter x:Key="StringToUri"/>
		<converter:StringToCurrencyConverter x:Key="StringToCurrency"/>
		<converter:IntegerToBooleanConverter x:Key="IntToBoolean"/>
		<converter:OpacityToBooleanConverter x:Key="OpacityToBoolean" />
		<Storyboard x:Name="SbUploadingProductShown">
			<DoubleAnimation Duration="0:0:0.5" To="0.85"
							 Storyboard.TargetProperty="Opacity"
							 Storyboard.TargetName="GrUploadingProduct"/>
		</Storyboard>
		<Storyboard x:Name="SbUploadingProductHidden">
			<DoubleAnimation Duration="0:0:0.5" To="0"
							 Storyboard.TargetProperty="Opacity"
							 Storyboard.TargetName="GrUploadingProduct"/>
		</Storyboard>

		<Storyboard x:Name="SbApplyProductShown">
			<DoubleAnimation Duration="0:0:0.5" To="0.85"
							 Storyboard.TargetProperty="Opacity"
							 Storyboard.TargetName="GrApplyProduct"/>
		</Storyboard>
		<Storyboard x:Name="SbApplyProductHidden">
			<DoubleAnimation Duration="0:0:0.5" To="0"
							 Storyboard.TargetProperty="Opacity"
							 Storyboard.TargetName="GrApplyProduct"/>
		</Storyboard>
	</Page.Resources>
	<Grid>
		<Grid Padding="10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition Width="320"/>
			</Grid.ColumnDefinitions>
			<Grid Grid.Column="0"
			  Padding="0 0 10 0">
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="60"/>
				</Grid.RowDefinitions>
				<Pivot Grid.Row="0"
					   Padding="0">
					<PivotItem Header="{Binding TbxHeaderUploading}">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="30"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>
							<Grid Grid.Row="0">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="50"/>
									<ColumnDefinition Width="150"/>
									<ColumnDefinition Width="250"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="150"/>
									<ColumnDefinition Width="140"/>
								</Grid.ColumnDefinitions>
								<Grid Grid.Column="0"
							  Margin="0 0 5 0"
							  BorderBrush="#ccc"
							  BorderThickness="0 0 0 1">
									<TextBlock Text="No."
									   VerticalAlignment="Center"
									   TextAlignment="Center"/>
								</Grid>
								<Grid Grid.Column="1"
							  Margin="5 0 5 0"
							  BorderBrush="#ccc"
							  BorderThickness="0 0 0 1">
									<TextBlock Text="{Binding TbxThumbnail}"
									   VerticalAlignment="Center"
									   TextAlignment="Center"/>
								</Grid>
								<Grid Grid.Column="2"
							  Margin="5 0 5 0"
							  BorderBrush="#ccc"
							  BorderThickness="0 0 0 1">
									<TextBlock Text="{Binding TbxName}"
									   VerticalAlignment="Center"
									   TextAlignment="Center"/>
								</Grid>
								<Grid Grid.Column="3"
							  Margin="5 0 5 0"
							  BorderBrush="#ccc"
							  BorderThickness="0 0 0 1">
									<TextBlock Text="{Binding TbxDescription}"
									   VerticalAlignment="Center"
									   TextAlignment="Center"/>
								</Grid>
								<Grid Grid.Column="4"
							  Margin="5 0 5 0"
							  BorderBrush="#ccc"
							  BorderThickness="0 0 0 1">
									<TextBlock Text="{Binding TbxPrice}"
									   VerticalAlignment="Center"
									   TextAlignment="Center"/>
								</Grid>
								<Grid Grid.Column="5"
									  Margin="5 0 0 0"
									  BorderBrush="#ccc"
									  BorderThickness="0 0 0 1">
									<Button Padding="0"
											Height="50"
											Background="Transparent"
											HorizontalAlignment="Stretch">
										<StackPanel Orientation="Horizontal">
											<TextBlock FontFamily="Segoe MDL2 Assets"
													   Text="&#xE74D;"
													   TextAlignment="Center"
													   FontSize="16"
													   VerticalAlignment="Center"/>
											<TextBlock Text="{Binding TbxDeleteAll}"
													   Margin="5 0 0 0"/>
										</StackPanel>
										<Button.Resources>
											<ResourceDictionary>
												<ResourceDictionary.ThemeDictionaries>
													<ResourceDictionary x:Key="Light">
														<SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent" />
														<SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="Transparent"/>
														<SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
														<SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
														<SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
														<SolidColorBrush x:Key="ButtonForegroundPressed" Color="Red"/>
														<SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent"/>
														<SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="Transparent"/>
													</ResourceDictionary>
												</ResourceDictionary.ThemeDictionaries>
											</ResourceDictionary>
										</Button.Resources>
										<i:Interaction.Behaviors>
											<core:EventTriggerBehavior EventName="Tapped">
												<core:InvokeCommandAction Command="{Binding ElementName=root, Path=DataContext.BtDeleteAllProductTapped}"
														  CommandParameter="{Binding}"/>
											</core:EventTriggerBehavior>
										</i:Interaction.Behaviors>
									</Button>
								</Grid>
							</Grid>
							<Grid Grid.Row="1">
								<Grid.Resources>
									<res:StaticResources x:Key="ListProductResource"/>
								</Grid.Resources>
								<ListView ItemsSource="{Binding ListItem}">
									<ListView.ItemContainerStyle>
										<Style TargetType="ListViewItem">
											<Setter Property="Padding" Value="0"/>
											<Setter Property="Height" Value="150"/>
											<Setter Property="Margin" Value="0 5 0 5"/>
											<Setter Property="HorizontalAlignment" Value="Stretch"/>
											<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
											<Setter Property="Template">
												<Setter.Value>
													<ControlTemplate TargetType="ListViewItem">
														<ListViewItemPresenter FocusSecondaryBorderBrush="Transparent"
															   PlaceholderBackground="Transparent"
															   PointerOverBackground="Transparent"
															   SelectedBackground="Transparent"
															   SelectedPointerOverBackground="Transparent"
															   PointerOverForeground="Red"
															   SelectedForeground="Red"/>
													</ControlTemplate>
												</Setter.Value>
											</Setter>
										</Style>
									</ListView.ItemContainerStyle>
									<ListView.ItemTemplate>
										<DataTemplate>
											<Grid HorizontalAlignment="Stretch">
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="50"/>
													<ColumnDefinition Width="150"/>
													<ColumnDefinition Width="250"/>
													<ColumnDefinition Width="*"/>
													<ColumnDefinition Width="150"/>
													<ColumnDefinition Width="140"/>
												</Grid.ColumnDefinitions>
												<Grid Grid.Column="0"
													  Margin="0 0 5 0">
													<TextBlock Text="{Binding index}"
															 VerticalAlignment="Center"
															 TextAlignment="Center"/>
												</Grid>
												<Grid Grid.Column="1"
													  Margin="5 0 5 0">
													<Image Source="{Binding image, Converter={StaticResource StringToUri}}"
														   Stretch="UniformToFill"/>
												</Grid>
												<Grid Grid.Column="2"
													  Margin="5 0 5 0">
													<TextBox Text="{Binding name,Mode=TwoWay}"
															 VerticalAlignment="Center"
															 TextAlignment="Left"
															 TextWrapping="Wrap"
															 BorderBrush="Transparent"
															 BorderThickness="0"
															 Padding="0"/>
												</Grid>
												<Grid Grid.Column="3"
													  Margin="5 0 5 0">
													<ScrollViewer>
														<TextBox Text="{Binding description, Mode=TwoWay}"
																 VerticalAlignment="Center"
																 TextAlignment="Left"
																 TextWrapping="Wrap"
																 BorderBrush="Transparent"
																 BorderThickness="0"
																 AcceptsReturn="True"
																 Padding="0"/>
													</ScrollViewer>
												</Grid>
												<Grid Grid.Column="4"
													  Margin="5 0 5 0">
													<TextBox Text="{Binding price, Converter={StaticResource StringToCurrency}, Mode=TwoWay}"
													   VerticalAlignment="Center"
													   TextAlignment="Center"
															 BorderBrush="Transparent"
															 BorderThickness="0"/>
												</Grid>
												<Grid Grid.Column="5"
													  Margin="5 0 0 0">
													<Grid.ColumnDefinitions>
														<ColumnDefinition/>
														<ColumnDefinition/>
													</Grid.ColumnDefinitions>
													<Grid Grid.Column="0">
														<Button Padding="0"
																Width="Auto"
																Height="50"
																Background="Transparent"
																HorizontalAlignment="Center">
															<StackPanel>
																<TextBlock FontFamily="Segoe MDL2 Assets"
																		   Text="&#xE898;"
																		   TextAlignment="Center"/>
																<TextBlock Text="{Binding ElementName=root,Path=DataContext.TbxUpload}"
																		   FontSize="10"
																		   VerticalAlignment="Bottom"/>
															</StackPanel>
															<Button.Resources>
																<ResourceDictionary>
																	<ResourceDictionary.ThemeDictionaries>
																		<ResourceDictionary x:Key="Light">
																			<SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent" />
																			<SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="Transparent"/>
																			<SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
																			<SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
																			<SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
																			<SolidColorBrush x:Key="ButtonForegroundPressed" Color="Red"/>
																			<SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent"/>
																			<SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="Transparent"/>
																		</ResourceDictionary>
																	</ResourceDictionary.ThemeDictionaries>
																</ResourceDictionary>
															</Button.Resources>
															<i:Interaction.Behaviors>
																<core:EventTriggerBehavior EventName="Tapped">
																	<core:InvokeCommandAction Command="{Binding ElementName=root, Path=DataContext.BtUploadProductTapped}"
														  CommandParameter="{Binding}"/>
																</core:EventTriggerBehavior>
															</i:Interaction.Behaviors>
														</Button>
													</Grid>
													<Grid Grid.Column="1">
														<Button Padding="0"
													Width="Auto"
													Height="50"
													Background="Transparent"
													HorizontalAlignment="Center">
															<StackPanel>
																<TextBlock FontFamily="Segoe MDL2 Assets"
															   Text="&#xE74D;"
															   TextAlignment="Center"/>
																<TextBlock Text="{Binding ElementName=root, Path=DataContext.TbxDelete}"
															   FontSize="10"
															   VerticalAlignment="Bottom"/>
															</StackPanel>
															<Button.Resources>
																<ResourceDictionary>
																	<ResourceDictionary.ThemeDictionaries>
																		<ResourceDictionary x:Key="Light">
																			<SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent" />
																			<SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="Transparent"/>
																			<SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
																			<SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
																			<SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
																			<SolidColorBrush x:Key="ButtonForegroundPressed" Color="Red"/>
																			<SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent"/>
																			<SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="Transparent"/>
																		</ResourceDictionary>
																	</ResourceDictionary.ThemeDictionaries>
																</ResourceDictionary>
															</Button.Resources>
															<i:Interaction.Behaviors>
																<core:EventTriggerBehavior EventName="Tapped">
																	<core:InvokeCommandAction Command="{Binding ElementName=root, Path=DataContext.BtDeleteProductTapped}"
														  CommandParameter="{Binding}"/>
																</core:EventTriggerBehavior>
															</i:Interaction.Behaviors>
														</Button>
													</Grid>
												</Grid>
											</Grid>
										</DataTemplate>
									</ListView.ItemTemplate>
								</ListView>
							</Grid>
						</Grid>
					</PivotItem>
					<PivotItem>
						<PivotItem.Header>
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="{Binding TbxError}"/>
								<Grid Width="20"
								  Visibility="{Binding TbxTotalProductError,Converter={StaticResource IntToBoolean}}">
									<Canvas>
										<Ellipse Width="20"
											 Height="20"
											 Fill="Red"/>
									</Canvas>
									<TextBlock Text="{Binding TbxTotalProductError}"
										   FontSize="13"
										   Foreground="white"
										   HorizontalAlignment="Center"/>
								</Grid>
							</StackPanel>
						</PivotItem.Header>
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="30"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>
							<Grid Grid.Row="0">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="50"/>
									<ColumnDefinition Width="150"/>
									<ColumnDefinition Width="200"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="180"/>
									<ColumnDefinition Width="140"/>
								</Grid.ColumnDefinitions>
								<Grid Grid.Column="0"
									  Margin="0 0 5 0"
									  BorderBrush="#ccc"
									  BorderThickness="0 0 0 1">
									<TextBlock Text="No."
									   VerticalAlignment="Center"
									   TextAlignment="Center"/>
								</Grid>
								<Grid Grid.Column="1"
									  Margin="5 0 5 0"
									  BorderBrush="#ccc"
									  BorderThickness="0 0 0 1">
									<TextBlock Text="{Binding TbxThumbnail}"
									   VerticalAlignment="Center"
									   TextAlignment="Center"/>
								</Grid>
								<Grid Grid.Column="2"
							  Margin="5 0 5 0"
							  BorderBrush="#ccc"
							  BorderThickness="0 0 0 1">
									<TextBlock Text="{Binding TbxName}"
									   VerticalAlignment="Center"
									   TextAlignment="Center"/>
								</Grid>
								<Grid Grid.Column="3"
							  Margin="5 0 5 0"
							  BorderBrush="#ccc"
							  BorderThickness="0 0 0 1">
									<TextBlock Text="{Binding TbxDescription}"
									   VerticalAlignment="Center"
									   TextAlignment="Center"/>
								</Grid>
								<Grid Grid.Column="4"
									  Margin="5 0 5 0"
									  BorderBrush="#ccc"
									  BorderThickness="0 0 0 1">
									<TextBlock Text="{Binding TbxErrorReason}"
											   VerticalAlignment="Center"
											   TextAlignment="Center"/>
								</Grid>
								<Grid Grid.Column="5"
									  Margin="5 0 0 0"
									  BorderBrush="#ccc"
									  BorderThickness="0 0 0 1">
									<Button Padding="0"
											Height="50"
											Background="Transparent"
											HorizontalAlignment="Stretch">
										<StackPanel Orientation="Horizontal">
											<TextBlock FontFamily="Segoe MDL2 Assets"
													   Text="&#xE74D;"
													   TextAlignment="Center"
													   FontSize="16"
													   VerticalAlignment="Center"/>
											<TextBlock Text="{Binding TbxDeleteAll}"
													   Margin="5 0 0 0"/>
										</StackPanel>
										<Button.Resources>
											<ResourceDictionary>
												<ResourceDictionary.ThemeDictionaries>
													<ResourceDictionary x:Key="Light">
														<SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent" />
														<SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="Transparent"/>
														<SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
														<SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
														<SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
														<SolidColorBrush x:Key="ButtonForegroundPressed" Color="Red"/>
														<SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent"/>
														<SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="Transparent"/>
													</ResourceDictionary>
												</ResourceDictionary.ThemeDictionaries>
											</ResourceDictionary>
										</Button.Resources>
										<i:Interaction.Behaviors>
											<core:EventTriggerBehavior EventName="Tapped">
												<core:InvokeCommandAction Command="{Binding ElementName=root, Path=DataContext.BtDeleteAllProductErrorTapped}"
														  CommandParameter="{Binding}"/>
											</core:EventTriggerBehavior>
										</i:Interaction.Behaviors>
									</Button>
								</Grid>
							</Grid>
							<Grid Grid.Row="1">
								<Grid.Resources>
									<res:StaticResources x:Key="ListProductResource"/>
								</Grid.Resources>
								<ListView ItemsSource="{Binding ListItemError}">
									<ListView.ItemContainerStyle>
										<Style TargetType="ListViewItem">
											<Setter Property="Padding" Value="0"/>
											<Setter Property="Height" Value="150"/>
											<Setter Property="Margin" Value="0 5 0 5"/>
											<Setter Property="HorizontalAlignment" Value="Stretch"/>
											<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
											<Setter Property="Template">
												<Setter.Value>
													<ControlTemplate TargetType="ListViewItem">
														<ListViewItemPresenter FocusSecondaryBorderBrush="Transparent"
															   PlaceholderBackground="Transparent"
															   PointerOverBackground="Transparent"
															   SelectedBackground="Transparent"
															   SelectedPointerOverBackground="Transparent"
															   PointerOverForeground="Red"
															   SelectedForeground="Red"/>
													</ControlTemplate>
												</Setter.Value>
											</Setter>
										</Style>
									</ListView.ItemContainerStyle>
									<ListView.ItemTemplate>
										<DataTemplate>
											<Grid HorizontalAlignment="Stretch">
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="50"/>
													<ColumnDefinition Width="150"/>
													<ColumnDefinition Width="200"/>
													<ColumnDefinition Width="*"/>
													<ColumnDefinition Width="180"/>
													<ColumnDefinition Width="140"/>
												</Grid.ColumnDefinitions>
												<Grid Grid.Column="0"
													  Margin="0 0 5 0">
													<TextBlock Text="{Binding index}"
													   VerticalAlignment="Center"
													   TextAlignment="Center"/>
												</Grid>
												<Grid Grid.Column="1"
													  Margin="5 0 5 0">
													<Image Source="{Binding image, Converter={StaticResource StringToUri}}"
														   Stretch="UniformToFill"/>
												</Grid>
												<Grid Grid.Column="2"
													  Margin="5 0 5 0">
													<TextBlock Text="{Binding name}"
													   VerticalAlignment="Center"
													   TextAlignment="Left"
													   TextWrapping="Wrap"
													   TextTrimming="CharacterEllipsis"/>
												</Grid>
												<Grid Grid.Column="3"
													  Margin="5 0 5 0">
													<ScrollViewer>
														<TextBlock Text="{Binding description}"
													   VerticalAlignment="Center"
													   TextAlignment="Left"
													   TextWrapping="Wrap"/>
													</ScrollViewer>
												</Grid>
												<Grid Grid.Column="4"
													  Margin="5 0 5 0">
													<ScrollViewer>
														<TextBlock Text="{Binding UploadingErrorReason}"
																   VerticalAlignment="Center"
																   TextAlignment="Left"
																   TextWrapping="Wrap"/>
													</ScrollViewer>
												</Grid>
												<Grid Grid.Column="5"
													  Margin="5 0 0 0">
													<Grid>
														<Button Padding="0"
																Width="Auto"
																Height="50"
																Background="Transparent"
																HorizontalAlignment="Center">
															<StackPanel>
																<TextBlock FontFamily="Segoe MDL2 Assets"
																		   Text="&#xE74D;"
																		   TextAlignment="Center"/>
																<TextBlock Text="{Binding ElementName=root, Path=DataContext.TbxDelete}"
																		   FontSize="10"
																		   VerticalAlignment="Bottom"/>
															</StackPanel>
															<Button.Resources>
																<ResourceDictionary>
																	<ResourceDictionary.ThemeDictionaries>
																		<ResourceDictionary x:Key="Light">
																			<SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent" />
																			<SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="Transparent"/>
																			<SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
																			<SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
																			<SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
																			<SolidColorBrush x:Key="ButtonForegroundPressed" Color="Red"/>
																			<SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent"/>
																			<SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="Transparent"/>
																		</ResourceDictionary>
																	</ResourceDictionary.ThemeDictionaries>
																</ResourceDictionary>
															</Button.Resources>
															<i:Interaction.Behaviors>
																<core:EventTriggerBehavior EventName="Tapped">
																	<core:InvokeCommandAction Command="{Binding ElementName=root, Path=DataContext.BtDeleteProductErrorTapped}"
																							  CommandParameter="{Binding}"/>
																</core:EventTriggerBehavior>
															</i:Interaction.Behaviors>
														</Button>
													</Grid>
												</Grid>
											</Grid>
										</DataTemplate>
									</ListView.ItemTemplate>
								</ListView>
							</Grid>
						</Grid>
					</PivotItem>
				</Pivot>
				<Grid Grid.Row="1"
						  BorderBrush="#ccc"
						  BorderThickness="0 1 0 0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition Width="400"/>
						<ColumnDefinition Width="100"/>
					</Grid.ColumnDefinitions>
					<Grid Grid.Column="0">
						<StackPanel Orientation="Horizontal">
							<Grid>
								<Button Padding="0"
										Width="70"
										Background="Transparent"
										HorizontalAlignment="Right"
										VerticalAlignment="Bottom">
									<StackPanel VerticalAlignment="Bottom">
										<TextBlock FontFamily="Segoe MDL2 Assets"
										   Text="&#xE74E;"
										   TextAlignment="Center"
										   FontSize="20"/>
										<TextBlock Text="{Binding TbxSave}"
										   FontSize="14"
										   VerticalAlignment="Bottom"/>
									</StackPanel>
									<Button.Resources>
										<ResourceDictionary>
											<ResourceDictionary.ThemeDictionaries>
												<ResourceDictionary x:Key="Light">
													<SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent" />
													<SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="Transparent"/>
													<SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
													<SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
													<SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
													<SolidColorBrush x:Key="ButtonForegroundPressed" Color="Red"/>
													<SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent"/>
													<SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="Transparent"/>
												</ResourceDictionary>
											</ResourceDictionary.ThemeDictionaries>
										</ResourceDictionary>
									</Button.Resources>
									<i:Interaction.Behaviors>
										<core:EventTriggerBehavior EventName="Tapped">
											<core:InvokeCommandAction Command="{Binding BtSaveFileToLocalTapped}"
														  CommandParameter="{Binding}"/>
										</core:EventTriggerBehavior>
									</i:Interaction.Behaviors>
								</Button>
							</Grid>
							<Grid Grid.Column="2">
								<Button Padding="0"
											Width="70"
											Background="Transparent"
								HorizontalAlignment="Right"
								VerticalAlignment="Bottom">
									<StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="0,0,-71,0">
										<TextBlock FontFamily="Segoe MDL2 Assets"
										   Text="&#xE8E5;"
										   TextAlignment="Center"
										   FontSize="20"/>
