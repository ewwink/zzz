														CornerRadius="5"
														Margin="0 5 0 0">
												<TextBox FontSize="15"
															 BorderBrush="Transparent"
															 BorderThickness="0"
															 Padding="6"
                                                             Text="{Binding TbDecreasePrice, Mode=TwoWay}"/>
